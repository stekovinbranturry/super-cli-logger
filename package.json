{
  "name": "@zk/logger",
  "version": "1.0.0",
  "description": "Beautiful cli logger",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup --watch",
    "examples:logger": "jiti ./examples/logger.ts",
    "examples:prompts": "jiti ./examples/prompts.ts",
    "examples:spinner": "jiti ./examples/spinner.ts",
    "lint": "eslint . --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . --fix --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@clack/core": "^0.3.4",
    "chalk": "^5.3.0",
    "debug": "^4.3.4",
    "gradient-string": "^2.0.2",
    "is-unicode-supported": "^2.0.0",
    "sisteransi": "^1.0.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/debug": "^4.1.12",
    "@types/gradient-string": "^1.1.5",
    "@types/node": "^20.8.8",
    "jest": "^29.7.0",
    "jiti": "^1.21.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.5.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
